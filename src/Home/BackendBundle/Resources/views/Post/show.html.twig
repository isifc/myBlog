{% extends 'MWSimpleCrudGeneratorBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Post'}, 'MWSimpleCrudGeneratorBundle') }}
{% endblock %}

{% block page %}
    
<div class="well well-lg">
    <h1>Post</h1>
    <form class="form-horizontal">
        <fieldset>                <div class="form-group">
                    <label class="control-label">Id</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.id }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Name</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.name }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Title</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.title }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Content</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.content }}</span>                    </div>
                </div>                <div class="form-group">
                    <label class="control-label">Date</label>
                    <div class="form-control">                        <span class="input-xlarge uneditable-input">{{ entity.date|date('Y-m-d H:i:s') }}</span>                    </div>
                </div>        </fieldset>
    </form>
</div>

        <div class="col-lg-9">
    <div class="float-left col-lg-3">
        <a class="btn btn-info col-lg-11" href="{{ path('admin_post') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left col-lg-3">
        <a class="btn btn-primary col-lg-11" href="{{ path('admin_post_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'MWSimpleCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left col-lg-3">{{ form(delete_form) }}</div>
</div>
{% endblock %}
